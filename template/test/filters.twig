<div class="card">
    <div class="card-body">
        {% for tag in tags %}

            <div>
                <label>
                    <input class="js-tag-filter" name="tags[]" type="checkbox" value="{{ tag.id }}">
                    {{ tag.name }}
                </label>
            </div>

        {% else %}
            <p>There is no tags defined forr filtering.</p>
        {% endfor %}
    </div>
</div>